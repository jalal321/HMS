            $('#frmActionBtn').attr("disabled", "true");
            //if (response.success) {
            //    //alert(response.message);
            //    $('#AccomodationId').val(response.data);

            //    $('#frmCheckAvailibility').submit();


            //    debugger;
            //} else {
            //    $('.modal-body h4').text(response.message);
            //    $('#errorModalbtn').trigger('click');
            //}
            //debugger;
        })
        .fail(function () {
