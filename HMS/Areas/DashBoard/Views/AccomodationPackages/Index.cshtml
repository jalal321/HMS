@model HMS.Areas.DashBoard.ViewModels.AccomodationPackagesListingViewModel
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col col-lg-12">
        <h2>Accomodation Packages</h2>
        <hr/>
    </div>
</div>


<div class="row mb-3">
    <div class="col col-lg-12">
        <form>
            <div class="input-group">
                <input type="text" class="form-control" name="searchTerm" placeholder="search..." value="@Model.SearchTerm" >
                <select class="form-control" name="accomodationTypeID">
                    @if(Model.AccomodationTypes != null && Model.AccomodationTypes.Any())
                    { 
                     <option value="0">Select Accomodation Type</option>
                     foreach (var t in Model.AccomodationTypes)
                    {
                        <option value="@t.Id" @(Model.AccomodationTypeID == t.Id ? "selected" : string.Empty) >@t.Name</option>
                    }
                    }

                </select>
                <div class="input-group-append" id="button-addon4">
                    <button class="btn btn-outline-primary" type="submit"><i class="fas fa-search mr-1"></i>Search</button>
                    <a class="btn btn-outline-secondary" href="@Url.Action("Index", "AccomodationPackages")"><i class="fas fa-redo-alt mr-1"></i>Reset</a>
                    <button class="data-btn btn btn-outline-success" data-href="@Url.Action("Action", "AccomodationPackages", new {isDelete = false})" type="button" data-toggle="modal" data-target="#actionModal">
                        <i class="fas fa-plus mr-1"></i>Create
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col col-lg-12">
        @{ Html.RenderPartial("_Listing", Model); }
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="actionModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-scrollable">
        @* keep modal content part in partial view _Action *@

    </div>
</div>


